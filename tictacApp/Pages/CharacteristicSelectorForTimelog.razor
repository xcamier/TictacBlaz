@page "/characteristicSelectorForTimelog"
@page "/characteristicSelectorForTimelog/{ParentCharacteristicId:int}"

@using tictacApp.Services
@using tictacApp.ViewModels
@using tictacApp.Shared

@inject ItemSelectionService<CharacteristicView, TimeLogView> ItemSelectionService

<CharacteristicSelectorComponent 
    TTypeOfCharacteristic=TimeLogView
    ParentCharacteristicId=@ParentCharacteristicId
    SubItemRootUri="characteristicSelectorForTimelog"
    ReturnAddUri="/logs/addLogFromCharacteristicSelection"
    ReturnEditUri="@($"/logs/{ItemSelectionService.EntityBackup.Id}/editLogFromCharacteristicSelection")" />


@code {
    [Parameter]
    public int? ParentCharacteristicId { get; set; } = null;
}