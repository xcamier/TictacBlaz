    private async Task BuildBreadcrumb()
    {
        BreadcrumbItem root = new BreadcrumbItem("Projects", href: "/projectSelector", icon: AppIcons.Project);
        _path.Add(root);

        if (ParentProjectId.HasValue)
        {
            KeyValuePair<int, string?>[] parentProjects = await ProjectsService.GetParentProjects(ParentProjectId.Value);
            foreach (KeyValuePair<int, string?> proj in parentProjects)
            {
                BreadcrumbItem item = new BreadcrumbItem(proj.Value, href: $"/projectSelector/{proj.Key}");
                _path.Add(item);
            }
        }
    }

    private async Task GetProjectsAsync()
    {
        try
        {
            _loading = true;
            _projects = await ProjectsService.GetProjectsAsync(ParentProjectId);
        }
        finally
        {
            _loading = false;
        }
    }

