@page "/addLog"

@using Data
@using tictacApp.Services

@inject TimeLogsService TimeLogsService
@inject NavigationManager Navigation
@inject ISnackbar Snackbar


@if (_timeLog is not null)
{
    <TimeLogForm Busy="@_busy" 
                   TimeLog="@_timeLog" 
                   IsAdd="true"
                   CancelRequest="Cancel"
                   ValidationResult="@(async (success) => await ValidationResultAsync(success))" />

    @if (_error)
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Filled">@_errorMessage</MudAlert>
    }
}

@code {
    private TimeLog? _timeLog { get; set; }
    private bool _busy;
    private bool _error;
    private string _errorMessage = string.Empty;

    protected override Task OnInitializedAsync()
    {
        DateTime now = DateTime.Now;
        _timeLog = new TimeLog
        {
            StartDate = now,
            TimeSpan = now.TimeOfDay
        };

        return base.OnInitializedAsync();
    }

    private async Task ValidationResultAsync(bool success)
    {
        if (_busy)
        {
            return;
        }

        if (!success)
        {
            Snackbar.Add("Unable to add the timelog", Severity.Warning);

            ResetErrorMessage();
            return;
        }

        try
        {
            _busy = true;

            bool res = await TimeLogsService.AddTimeLogAsync(_timeLog);

            ResetErrorMessage();

            if (res )
            {
                Snackbar.Add("Timelog added successfully", Severity.Success);
                GoBackToList();
            }
            else
            {
                Snackbar.Add("Error when adding the timelog", Severity.Warning);
            }
        }
        catch (Exception ex)
        {
            _error = true;
            _errorMessage = ex.Message;
        }
        finally
        {
            _busy = false;
        }
    }

    // Back to list.
    private void Cancel()
    {
        GoBackToList();
    }

    private void GoBackToList()
    {
        Navigation.NavigateTo($"/");
    }

    private void ResetErrorMessage()
    {
        _error = false;
        _errorMessage = string.Empty;
    }
}