@page "/characteristicSelectorForObservation"
@page "/characteristicSelectorForObservation/{ParentCharacteristicId:int}"

@using tictacApp.Services
@using tictacApp.ViewModels
@using tictacApp.Shared

@inject ItemSelectionService<CharacteristicView, ObservationView> ItemSelectionService

<CharacteristicSelectorComponent 
    TTypeOfCharacteristic=ObservationView
    ParentCharacteristicId=@ParentCharacteristicId
    SubItemRootUri="characteristicSelectorForObservation"
    ReturnAddUri="/observations/addObservationFromCharacteristicSelection"
    ReturnEditUri="@($"/observations/{ItemSelectionService.EntityBackup.Id}/editObservationFromCharacteristicSelection")" />


@code {
    [Parameter]
    public int? ParentCharacteristicId { get; set; } = null;
}